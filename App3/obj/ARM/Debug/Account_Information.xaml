        <Button x:ConnectionId='2' Content="変更内容の確定" HorizontalAlignment="Left" Margin="540,480,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="60" Width="200"  FontSize="24"                     />

